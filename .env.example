# =============================================================================
# Brazilian Financial Markets ETL Pipeline - Environment Configuration
# =============================================================================
# Copy this file to .env and customize the values for your environment.
# WARNING: Never commit the .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=dataeng
POSTGRES_PASSWORD=dataeng123
POSTGRES_DB=brazilian_market
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database URL (auto-constructed from above values in application code)
# For local development: postgresql://dataeng:dataeng123@localhost:5432/brazilian_market
# For Docker network:    postgresql://dataeng:dataeng123@postgres:5432/brazilian_market

# -----------------------------------------------------------------------------
# Apache Airflow Configuration
# -----------------------------------------------------------------------------
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_WEBSERVER_PORT=8080

# Fernet key for encrypting sensitive data in Airflow
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=

# -----------------------------------------------------------------------------
# Streamlit Dashboard Configuration
# -----------------------------------------------------------------------------
DASHBOARD_PORT=8501

# -----------------------------------------------------------------------------
# Data Extraction Configuration
# -----------------------------------------------------------------------------
# BCB API Base URL (Brazilian Central Bank)
BCB_API_URL=https://api.bcb.gov.br/dados/serie/bcdata.sgs

# Yahoo Finance settings
YFINANCE_RATE_LIMIT_SECONDS=1

# Data extraction window (historical data start date)
# BCB API limits daily series to ~10 years
DATA_START_DATE=2016-03-01

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s | %(levelname)s | %(name)s:%(funcName)s:%(lineno)d - %(message)s
